@page
@model AppICBF.Pages.AvanceAcademico.CrearAvanceAModel
@{
    ViewData["Title"] = "Lista Avance Academico";
}
<br />
<h2>Agregar Nuevo Avance Academico</h2>

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Identificacion_Nino">Identificacion_Nino</label>
                <input type="text" class="form-control" id="Identificacion_Nino" name="Identificacion_Nino" value="@Model.avanceAInfo.Identificacion_Nino" />
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Ano_Escolar">Estado_Nino</label>
                <input type="text" class="form-control" id="Ano_Escolar" name="Ano_Escolar" value="@Model.avanceAInfo.Ano_Escolar">
            </div>
        </div>



        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar Asistencia</button>
                <a class="btn btn-secondary" asp-page="/Asistencia/IndexAsistencia">Volver</a>
            </div>
        </div>
    </div>
</form>
