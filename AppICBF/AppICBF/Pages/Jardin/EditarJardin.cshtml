@page
@model AppICBF.Pages.Jardin.EditarJardinModel
@{
    ViewData["Title"] = "Editar Jardín";
}

<h2>Editar Jardín</h2>

<form method="POST">
    <input type="hidden" class="form-control" name="Identificador_Jardin" value="@Model.JardinInfo.Identificador_Jardin" />
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Nombre_Jardin">Nombre Jardín</label>
                <input type="text" class="form-control" id="Nombre_Jardin" name="Nombre_Jardin" value="@Model.JardinInfo.Nombre_Jardin">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Direccion">Dirección Jardín</label>
                <input type="text" class="form-control" id="Direccion" name="Direccion" value="@Model.JardinInfo.Direccion">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="estado">Selecciona un jardín:</label>
                <select id="estado" name="estado" class="form-control" value="@Model.JardinInfo.Estado">
                    <option value=""> Selecciona un estado </option>
                    <option value="Aprobado">Aprobado</option>
                    <option value="En trámite">En trámite</option>
                    <option value="Negado">Negado</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Jardin/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
