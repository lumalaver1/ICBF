@page
@model AppICBF.Pages.Acudiente.EditarAcudienteModel
@{
    ViewData["Title"] = "Editar Acudientes";
}

<h2>Editar Jardín</h2>

<form method="POST">
    <input type="hidden" class="form-control" name="Cedula" value="@Model.AcudienteInfo.Cedula" />
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Nombre">Nombre</label>
                <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.AcudienteInfo.Nombre">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Telefono">Telefono</label>
                <input type="text" class="form-control" id="Telefono" name="Telefono" value="@Model.AcudienteInfo.Nombre">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Celular">Celular</label>
                <input type="text" class="form-control" id="Celular" name="Celular" value="@Model.AcudienteInfo.Celular">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Direccion">Direccion</label>
                <input type="text" class="form-control" id="Direccion" name="Direccion" value="@Model.AcudienteInfo.Direccion">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="Correo">Correo</label>
                <input type="text" class="form-control" id="Correo" name="Correo" value="@Model.AcudienteInfo.Correo">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Acudiente/IndexAcudiente" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
