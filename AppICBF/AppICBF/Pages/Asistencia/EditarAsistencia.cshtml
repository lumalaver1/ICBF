@page
@model AppICBF.Pages.Asistencia.EditarAsistenciaModel
@{
    ViewData["Title"] = "Editar Asistencia";
}

<h2>Editar Asistenciah2>

<form method="POST">
        <input type="hidden" class="form-control" name="Identificacion_Nino" value="@Model.AsistenciaInfo.Identificacion_Nino" />
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                    <label class="col-form-label" for="Fecha">Fecha</label>
                    <input type="text" class="form-control" id="Fecha" name="Fecha" value="@Model.AsistenciaInfo.Fecha">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                    <label class="col-form-label" for="Estado_Nino">Estado_Nino</label>
                    <input type="text" class="form-control" id="Estado_Nino" name="Direccion" value="@Model.AsistenciaInfo.Estado_Nino">
            </div>
        </div>

       

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Jardin/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

